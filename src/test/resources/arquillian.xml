<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <container qualifier="arquillian-wildfly-embedded">
        <configuration>
            <property name="jbossHome">${JBOSS_HOME}</property>
            <property name="managementPort">10495</property>
            <property name="javaVmArguments">-Xmx1024m -Xmx2G -Djboss.socket.binding.port-offset=505</property>
        </configuration>
    </container>

</arquillian>
